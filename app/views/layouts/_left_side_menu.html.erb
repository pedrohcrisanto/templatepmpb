<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag 'militar.png', class: 'img-circl`e' %>
      </div>
      <div class="pull-left info">
        <div>

        <%= link_to 'Cadastro Rpas', cadastro_rpas_path, class:'btn btn-danger' %>
      </div>
      </div>
    </div>

    <!-- Menu goes here -->

    <ul class="sidebar-menu">

      <!-- BEGIN - MODULO RECURSOS HUMANOS -->
      <% if current_user.has_permission?('administrador') %>
      <li class="treeview <%= 'active' if controller?('users') %>">
        <a href="#">
          <i class="fa fa-users"></i>
          <span>Recursos Humanos</span>
          <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to cadastro_path do %>
              <i class="fa fa-circle-o"></i> Cadastro RPAs
            <% end %>
          </li>
          <li>
            <%= link_to new_user_path do %>
              <i class="fa fa-circle-o"></i> Cadastrar Servidor
            <% end %>
          </li>
          <li><a href="#"><i class="fa fa-circle-o"></i> Relatórios</a></li>
        </ul>
      </li>

      <li class="treeview <%= 'active' if controller?('units') %>">
        <a href="#">
          <i class="fa fa-university"></i>
          <span>Unidades Militares</span>
          <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to units_path do %>
              <i class="fa fa-circle-o"></i> Listar Unidades
            <% end %>
          </li>
          <li>
            <%= link_to new_unit_path do %>
              <i class="fa fa-circle-o"></i> Cadastrar Unidade
            <% end %>
          </li>
        </ul>
      </li>

      <% end %>
      <!-- END - MODULO RECURSOS HUMANOS -->


      <!-- BEGIN - MODULO ADMINISTRADOR DA APLICAÇÃO -->
      <% if current_user.has_permission?('administrador') %>
      <li class="treeview <%= 'active' if controller?('permissions') %>">
        <a href="#">
          <i class="fa fa-unlock-alt"></i>
          <span>Controle de Papeis</span>
          <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to permissions_path do %>
              <i class="fa fa-circle-o"></i> Consultar Papeis
            <% end %>
          </li>
          <li>
            <%= link_to new_permission_path do %>
              <i class="fa fa-circle-o"></i> Cadastrar Papel
            <% end %>
          </li>
        </ul>
      </li>

      <% end %>
      <!-- END - MODULO ADMINISTRADOR DO SISTEMA -->

    </ul>

    <!-- end - menu -->

  </section>
  <!-- /.sidebar -->
</aside>
