<p id="notice"><%= notice %></p>

<h1>Plano De Voos</h1>

<table class="table table-bordered table-hover table-condensed table-responsive">
  <thead>
    <tr>
      <th>Codigo chamdarpa</th>
      <th>Data voo</th>
      <th>Tipo operacao</th>
      <th>Numero estacao</th>
      <th>Localizao estacao</th>
      <th>Local decolagem</th>
      <th>Local destino</th>
      <th>Rota</th>
      <th>Id usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plano_de_voos.each do |plano_de_voo| %>
      <tr>
        <td><%= plano_de_voo.codigo_chamdarpa %></td>
        <td><%= plano_de_voo.data_voo %></td>
        <td><%= plano_de_voo.numero_estacao %></td>
        <td><%= plano_de_voo.localizao_estacao %></td>
        <td><%= plano_de_voo.local_decolagem %></td>
        <td><%= plano_de_voo.local_destino %></td>
        <td><%= plano_de_voo.rota %></td>
        <td><%= plano_de_voo.id_usuario %></td>
        <td><%= link_to 'Mostrar', plano_de_voo %></td>
        <td><%= link_to 'Editar', edit_plano_de_voo_path(plano_de_voo) %></td>
        <td><%= link_to 'Excluir', plano_de_voo, method: :delete, data: { confirm: 'Voce tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

